@page "/BattleshipGame"
@using Battleship.Model
@using Battleship.Shared
@inject HttpClient Http

<PageTitle>Battleship Game</PageTitle>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
            @for (int row = 0; row < size; row++)
            {
                <tr>
                @for(int col = 0; col < size; col++)
                {
                    <td>
                        <div class="col-sm @GetFormat(grid.Squares[row,col])" style="border: solid 1px black">
                            @GetCharFromSquareState(grid.Squares[row, col])
                        </div>
                        
                    </td>
                }
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Grid grid = new Grid(10);
    private int size = 10; // todo get from grid

    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("WeatherForecast");
    }

        private char GetCharFromSquareState(SquareStates state)
    {
        return ViewFormatting.GetCharFromSquareState(state);
    }

        private string GetFormat(SquareStates state)
    {
        return ViewFormatting.GetFormat(state);
    }
}
